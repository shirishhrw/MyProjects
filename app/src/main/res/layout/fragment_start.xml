<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentB">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Welcome!"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fragment_a_btn"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:gravity="center"
        android:padding="10dp"
        android:text="Go To Fragment A"
        android:textColor="@color/cardview_light_background"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fragment_b_btn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/fragment_b_btn"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:gravity="center"
        android:padding="10dp"
        android:text="Go To Fragment B"
        android:textColor="@color/cardview_light_background"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fragment_a_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>
